{
	"manifest_version": 2,
	"name": "Tag Injector",
	"version": "1.0.0",
	"description": "A tool designed to inject ad tags into the website and modify web requests for JS files",
	"icons": {
		"16": "img/48.png",
		"48": "img/48.png"
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["js/content.js"],
		"css": ["css/content.css"]
	}],
	"background": {
		"scripts": ["js/background.js"]
	},
	"permissions": [
		"storage",
		"tabs",
		"activeTab",
		"webRequest",
		"webRequestBlocking",
		"*://*/*",
		"<all_urls>"
	],
	"browser_action": {
		"default_icon": "img/green16.png",
		"default_title": "Tag Injector",
		"default_popup": "popup.html"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}